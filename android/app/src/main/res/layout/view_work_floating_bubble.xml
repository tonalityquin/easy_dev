<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:layout_margin="4dp">

    <!-- 출근 -->
    <ImageButton
        android:id="@+id/btnClockIn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:contentDescription="출근"
        android:src="@android:drawable/ic_media_play" />

    <!-- 휴게 -->
    <ImageButton
        android:id="@+id/btnBreak"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:contentDescription="휴게"
        android:src="@android:drawable/ic_media_pause" />

    <!-- 퇴근 -->
    <ImageButton
        android:id="@+id/btnClockOut"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:contentDescription="퇴근"
        android:src="@android:drawable/ic_media_next" />

    <!-- 닫기 -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:contentDescription="버블 닫기"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

</LinearLayout>
